@model WarLib.WarSetup

<div id="enemy-area">
    Deck size: @Model.Player2Cards.Count()
    @foreach (CardsLib.Card card in Model.Player2StoredCards)
    {
        <p>@card.FullName</p>
        <img src="~/Content/Images/Cards/@(
            card.ValueInt > 10 ? card.Value : card.ValueInt + ""
            )_of_@(card.Suit).svg" />
    }
</div>
<div id="player-area">
    Deck size: @Model.Player1Cards.Count()
    @foreach (CardsLib.Card card in Model.Player1StoredCards)
    {
        <p>@card.FullName</p>
        <img src="~/Content/Images/Cards/@(
            card.ValueInt > 10 ? card.Value : card.ValueInt + ""
            )_of_@(card.Suit).svg" />
    }
</div>
